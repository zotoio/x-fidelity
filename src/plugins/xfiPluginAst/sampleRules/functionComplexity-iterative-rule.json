{
    "name": "functionComplexity-iterative",
    "conditions": {
        "all": [
            {
                "fact": "fileData",
                "path": "$.fileName",
                "operator": "notEqual",
                "value": "REPO_GLOBAL_CHECK"
            },
            {
                "fact": "functionComplexity",
                "params": {
                    "resultFact": "complexityResult",
                    "minimumComplexityLogged": 5,
                    "thresholds": {
                        "cyclomaticComplexity": 10,
                        "cognitiveComplexity": 10,
                        "nestingDepth": 5,
                        "parameterCount": 5,
                        "returnCount": 3
                    }
                },
                "operator": "astComplexity",
                "value": {
                    "cyclomaticComplexity": 10,
                    "cognitiveComplexity": 10,
                    "nestingDepth": 5,
                    "parameterCount": 5,
                    "returnCount": 3
                }
            }
        ]
    },
    "event": {
        "type": "warning",
        "params": {
            "message": "Functions detected with high complexity (cyclomatic complexity >= 10, cognitive complexity >= 10, or nesting depth >= 5). Consider refactoring.",
            "details": {
                "fact": "complexityResult"
            }
        }
    }
}
