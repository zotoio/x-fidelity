{
    "name": "node-fullstack",
    "rules": [
        "sensitiveLogging-iterative",
        "outdatedFramework-global",
        "noDatabases-iterative", 
        "nonStandardDirectoryStructure-global",
        "openaiAnalysisTop5-global",
        "openaiAnalysisA11y-global",
        "openaiAnalysisTestCriticality-global",
        "invalidSystemIdConfigured-iterative",
        "missingRequiredFiles-global",
        "factDoesNotAddResultToAlmanac-iterative",
        "newSdkFeatureNotAdoped-global",
        "lowMigrationToNewComponentLib-global",
        "functionComplexity-iterative",
        "functionCount-iterative",
        "codeRhythm-iterative"
    ],
    "operators": [
        "fileContains",
        "outdatedFramework", 
        "nonStandardDirectoryStructure",
        "openaiAnalysisHighSeverity",
        "invalidRemoteValidation",
        "missingRequiredFiles",
        "regexMatch",
        "globalPatternRatio",
        "globalPatternCount",
        "astComplexity",
        "functionCount"
    ],
    "plugins": [
        "xfiPluginRequiredFiles",
        "xfiPluginRemoteStringValidator",
        "xfiPluginAst"
    ],
    "facts": [
        "repoFilesystemFacts",
        "repoDependencyFacts",
        "openaiAnalysisFacts",
        "remoteSubstringValidation", 
        "missingRequiredFiles",
        "globalFileAnalysisFacts",
        "ast",
        "functionComplexity",
        "functionCount",
        "codeRhythm"
    ],
    "config": {
        "minimumDependencyVersions": {
            "@types/react": ">=18.0.0",
            "react": "~17.0.0",
            "@yarnpkg/lockfile": "<1.2.0",
            "commander": ">=2.0.0 <13.0.0",
            "nodemon": ">4.9.0",
            "@colors/colors": "1.7.0 || 1.6.0"
        },
        "standardStructure": {
            "app": {
                "frontend": null,
                "server": null
            }
        },
        "blacklistPatterns": [
            ".*\\/\\..*",
            ".*\\.(log|lock)$",
            ".*\\/(dist|coverage|build|node_modules)(\\/.*|$)"
        ],
        "whitelistPatterns": [
            ".*\\.(ts|tsx|js|jsx)$",
            ".*\\/xfiTestMatch\\.json$",
            ".*\\/README\\.md$"
        ],
        "notifications": {
            "enabled": true,
            "providers": ["email"],
            "recipients": {
                "email": ["io@zoto.io"]
            },
            "codeOwners": true,
            "notifyOnSuccess": true,
            "notifyOnFailure": true,
            "customTemplates": {
                "success": "All checks passed successfully! ðŸŽ‰\n\nArchetype: ${archetype}\nFiles analyzed: ${fileCount}\nExecution time: ${executionTime}s",
                "failure": "Issues found in codebase:\n\nArchetype: ${archetype}\nTotal issues: ${totalIssues}\n- Warnings: ${warningCount}\n- Errors: ${errorCount}\n- Fatalities: ${fatalityCount}\n\nAffected files:\n${affectedFiles}"
            }
        }
    }
}
