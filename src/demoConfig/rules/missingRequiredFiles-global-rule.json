{
    "name": "missingRequiredFiles-global",
    "conditions": {
        "all": [
            {
                "fact": "fileData",
                "path": "$.fileName",
                "operator": "equal",
                "value": "REPO_GLOBAL_CHECK"
            },
            {
                "fact": "globalFileData",
                "operator": "missingRequiredFiles",
                "value": [
                    "/README.md",
                    "../../src/\\core//cli&.ts",
                    "missingRequiredFiles-testing.js"
                ]
            }
        ]
    },
    "event": {
        "type": "fatality",
        "params": {
            "message": "Required files are missing from the repository",
            "details": [
                "/README.md",
                "../../src/\\core//cli&.ts",
                "missingRequiredFiles-testing.js"
            ]
        }
    }
}
