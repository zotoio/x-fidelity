{
    "name": "codeRhythm-iterative",
    "conditions": {
        "all": [
            {
                "fact": "fileData",
                "path": "$.fileName",
                "operator": "notEqual",
                "value": "REPO_GLOBAL_CHECK"
            },
            {
                "fact": "codeRhythm",
                "params": {
                    "resultFact": "codeRhythmResult"
                },
                "operator": "astComplexity",
                "value": {
                    "flowDensity": 0.7,
                    "operationalSymmetry": 0.6,
                    "syntacticDiscontinuity": 0.4
                }
            }
        ]
    },
    "event": {
        "type": "warning",
        "params": {
            "message": "Code rhythm analysis suggests potential readability issues. Consider reviewing the code structure.",
            "details": {
                "fact": "codeRhythmResult",
                "recommendations": [
                    "Check if functions are too densely packed with operations",
                    "Look for asymmetric code patterns that might be hard to follow",
                    "Review areas with abrupt changes in code style or pattern",
                    "Consider breaking down complex sections into smaller, more rhythmic units"
                ]
            }
        }
    }
}
