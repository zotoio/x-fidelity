{
    "name": "error-demo-rule",
    "conditions": {
        "all": [
            {
                "fact": "fileData",
                "path": "$.fileName",
                "operator": "equal",
                "value": "REPO_GLOBAL_CHECK"
            },
            {
                "fact": "errorDemoFact",
                "params": {
                    "errorType": "fact-error"
                },
                "operator": "errorDemoOperator",
                "value": "throw-operator-error"
            }
        ]
    },
    "event": {
        "type": "warning",
        "params": {
            "message": "Error demonstration rule triggered",
            "details": {
                "fact": "errorDemoFact"
            }
        }
    },
    "errorBehavior": "fatal",
    "onError": {
        "action": "xfiPluginErrorDemo:handleError",
        "params": {
            "notifyChannel": "errors",
            "priority": "high"
        }
    }
}
