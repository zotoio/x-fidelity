{
    "name": "noSensitiveLogging",
    "conditions": {
        "any": [
            {
                "fact": "fileData",
                "path": "$.fileContent",
                "operator": "fileContains",
                "value": "token"
            },
            {
                "fact": "fileData",
                "path": "$.fileContent",
                "operator": "fileContains",
                "value": "secret"
            }
        ]
    },
    "event": {
        "type": "violation",
        "params": {
            "message": "Sensitive data (token or secret) should not be logged."
        }
    }
}
