{
    "name": "yarnLockfileCheck-global",
    "conditions": {
        "all": [
            {
                "fact": "fileData",
                "path": "$.fileName",
                "operator": "equal",
                "value": "yarn.lock"
            },
            {
                "fact": "fileData",
                "path": "$.fileContent",
                "operator": "fileContains",
                "value": "lockfile"
            }
        ]
    },
    "event": {
        "type": "violation",
        "params": {
            "message": "yarn.lock file does not contain 'lockfile' string",
            "details": {
                "fact": "fileData",
                "path": "$.filePath"
            }
        }
    }
}
