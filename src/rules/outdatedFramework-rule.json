{
    "name": "outdatedFramework",
    "conditions": {
        "all": [
            {
                "fact": "fileData",
                "path": "$.fileName",
                "operator": "outdatedFramework",
                "value": {
                    "fact": "dependencyData"
                }
            }    
        ]
    },
    "event": {
        "type": "violation",
        "params": {
            "message": "some core framework dependencies have expired!",
            "filePath": {
                "fact": "fileData",
                "path": "$.filePath"
            },
            "minimumDependencyVersions": {
                "fact": "dependencyData",
                "path": "$.minimumDependencyVersions"
            }
        }
    }
}