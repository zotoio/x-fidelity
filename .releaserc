{
  "branches": ["master"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {"type": "feat", "release": "minor"},
          {"type": "fix", "release": "patch"},
          {"type": "perf", "release": "patch"},
          {"type": "revert", "release": "patch"},
          {"type": "bump", "release": "patch"},
          {"type": "docs", "release": false},
          {"type": "style", "release": false},
          {"type": "chore", "release": false},
          {"type": "refactor", "release": false},
          {"type": "test", "release": false},
          {"type": "build", "release": false},
          {"type": "ci", "release": false}
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        },
        "writerOpts": {
          "commitsSort": ["subject", "scope"],
          "groupBy": "type",
          "commitGroupsSort": "title",
          "commitsSort": ["scope", "subject"],
          "noteGroupsSort": "title"
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to the X-Fidelity CLI will be documented in this file."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyReleaseCmd": "echo 'üîç Verifying CLI package.json version: '$(node -p \"require('./package.json').version\")",
        "prepareCmd": "echo 'üìù Current package.json version before npm plugin: '$(node -p \"require('./package.json').version\") && echo 'üìÑ Copying root README.md to CLI package...' && cp ../../README.md ./README.md",
        "publishCmd": "echo 'üì¶ Publishing CLI with version: '$(node -p \"require('./package.json').version\")"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "tarballDir": "dist"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "successCmd": "echo '‚úÖ CLI published successfully with version: '$(node -p \"require('./package.json').version\") && echo 'üîí Note: This version will NOT be committed to git'"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/**",
            "label": "CLI Distribution Files"
          }
        ],
        "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:",
        "failTitle": "‚ùå Release failed",
        "failComment": "Unfortunately the release failed. Please check the logs for more details.",
        "labels": ["released"],
        "assignees": ["@semantic-release"]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}