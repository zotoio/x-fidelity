{
  "branches": [
    "master",
    {
      "name": "beta", 
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {"type": "feat", "release": "minor"},
          {"type": "fix", "release": "patch"},
          {"type": "perf", "release": "patch"},
          {"type": "revert", "release": "patch"},
          {"type": "bump", "release": "patch"},
          {"type": "docs", "release": false},
          {"type": "style", "release": false},
          {"type": "chore", "release": false},
          {"type": "refactor", "release": false},
          {"type": "test", "release": false},
          {"type": "build", "release": false},
          {"type": "ci", "release": false}
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        },
        "writerOpts": {
          "groupBy": "type",
          "commitGroupsSort": "title",
          "commitsSort": ["scope", "subject"],
          "noteGroupsSort": "title"
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to X-Fidelity will be documented in this file."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyReleaseCmd": "echo 'üîç Verifying unified release for version ${nextRelease.version}'",
        "prepareCmd": "echo 'üìù Preparing unified release ${nextRelease.version}' && node scripts/prepare-unified-release.js ${nextRelease.version}",
        "publishCmd": "echo 'üöÄ Publishing unified release ${nextRelease.version}' && node scripts/publish-unified-release.js ${nextRelease.version}",
        "successCmd": "echo '‚úÖ Unified release ${nextRelease.version} published successfully'"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "packages/x-fidelity-cli/dist/**",
            "label": "CLI Distribution Files (${nextRelease.gitTag})"
          },
          {
            "path": "packages/x-fidelity-vscode/*.vsix",
            "label": "VSCode Extension (${nextRelease.gitTag})"
          }
        ],
        "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:\n\nüì¶ **Released packages:**\n- [x-fidelity@${nextRelease.version}](https://www.npmjs.com/package/x-fidelity/v/${nextRelease.version}) (CLI)\n- [x-fidelity-vscode@${nextRelease.version}](https://marketplace.visualstudio.com/items?itemName=zotoio.x-fidelity-vscode) (VSCode Extension)",
        "failTitle": "‚ùå Unified Release failed",
        "failComment": "Unfortunately the unified release failed. Please check the logs for more details.",
        "labels": ["released"],
        "assignees": ["@semantic-release"]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "packages/x-fidelity-cli/package.json",
          "packages/x-fidelity-vscode/package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}