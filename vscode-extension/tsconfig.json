{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "x-fidelity": ["./node_modules/x-fidelity/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
