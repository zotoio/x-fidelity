{
  "name": "x-fidelity-monorepo",
  "version": "3.24.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces run clean && rm -rf dist *.tsbuildinfo",
    "clean:artifacts": "find . -name '*.d.ts' -o -name '*.map' -o -name '*.js.map' | grep -v node_modules | grep -v dist | xargs rm -f || true",
    "build:clean": "yarn clean && yarn clean:artifacts && tsc -b --verbose",
    "build": "tsc -b --verbose",
    "build:watch": "tsc -b --watch",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "commit": "yarn test && git-cz",
    "build-run": "yarn workspace x-fidelity run build-run"
  },
  "devDependencies": {
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "typescript": "^5.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
