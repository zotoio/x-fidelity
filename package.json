{
  "name": "x-fidelity",
  "version": "0.0.1",
  "description": "cli for opinionated framework adherence checks",
  "main": "dist/x-fi",
  "scripts": {
    "build": "rimraf dist/ && tsc && yarn copy-files",
    "copy-files": "cp src/rules/*.json dist/rules/ && cp dist/index.js dist/x-fi",
    "start": "nodemon --watch 'src/**/*.ts",
    "test": "jest"
  },
  "repository": "git@github.com:zotoio/x-fidelity.git",
  "author": "wyvern8 <io@zoto.io>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.4",
    "@types/node": "^16.18.97",
    "@types/semver": "^7.5.8",
    "jest": "^29.7.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@yarnpkg/lockfile": "^1.1.0",
    "commander": "^11.1.0",
    "dotenv": "^16.4.5",
    "format-json": "^1.0.3",
    "json-rules-engine": "^6.5.0",
    "lodash": "^4.17.21",
    "nodemon": "^3.0.2",
    "semver": "^7.6.2",
    "winston": "^3.13.0",
    "yarn": "^1.22.21"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
