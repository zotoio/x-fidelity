{
  "name": "x-fidelity-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/x-fidelity-cli",
      "packages/x-fidelity-core",
      "packages/x-fidelity-democonfig",
      "packages/x-fidelity-fixtures",
      "packages/x-fidelity-plugins",
      "packages/x-fidelity-server",
      "packages/x-fidelity-types",
      "packages/x-fidelity-vscode",
      "packages/typescript-config",
      "packages/eslint-config"
    ],
    "nohoist": [
      "**/x-fidelity-vscode",
      "**/x-fidelity-vscode/**",
      "**/x-fidelity-fixtures",
      "**/x-fidelity-fixtures/**"
    ]
  },
  "scripts": {
    "build": "turbo build",
    "build:production": "turbo build:production",
    "build:clean": "turbo clean && turbo build --force --no-cache",
    "build:local": "turbo build --force --no-cache",
    "dev": "turbo dev",
    "test": "yarn ci:quality && yarn test:consolidated",
    "test:consolidated": "yarn clean && node scripts/test-consolidated.js",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "test:coverage": "turbo test:coverage && yarn coverage:merge && yarn coverage:check",
    "test:coverage:local": "turbo test:coverage --force --no-cache && yarn coverage:merge && yarn coverage:check",
    "test:ci-local": "yarn build && yarn lint && yarn check-types && yarn test:coverage",
    "ci:simulate": "yarn clean && yarn build --force --no-cache && yarn lint && yarn check-types && yarn test:coverage",
    "ci:build-only": "yarn clean && yarn build --force --no-cache",
    "test:integration:all": "yarn test:integration && yarn workspace x-fidelity test:integration",
    "test:local": "turbo test --force --no-cache",
    "test:coverage:report": "turbo test:coverage && yarn coverage:merge && yarn coverage:report",
    "test:all": "yarn test:unit && yarn test:integration",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:local": "turbo lint --force --no-cache",
    "check-types": "turbo check-types",
    "check-types:local": "turbo check-types --force --no-cache",
    "clean": "turbo clean --force --no-cache",
    "clean:artifacts": "find . -name '*.d.ts' -o -name '*.map' -o -name '*.js.map' | grep -v node_modules | grep -v dist | xargs rm -f || true",
    "verify": "turbo verify",
    "verify:ci": "turbo verify:ci",
    "package": "turbo package --filter=x-fidelity --filter=x-fidelity-vscode",
    "security-audit": "turbo security-audit",
    "coverage:merge": "node scripts/merge-coverage.js",
    "coverage:report": "yarn coverage:merge",
    "coverage:check": "node scripts/check-coverage-thresholds.js",
    "coverage:upload": "codecov -f coverage/lcov.info",
    "codecov:local": "node scripts/codecov-local.js",
    "codecov:validate": "yarn coverage:merge && yarn codecov:local",
    "codecov:check": "yarn test:coverage && yarn codecov:validate",
    "codecov:config": "node scripts/codecov-local.js --config-only",
    "publish:cli": "turbo build:production --filter=x-fidelity && cd packages/x-fidelity-cli && yarn release",
    "publish:vscode": "turbo package --filter=x-fidelity-vscode && cd packages/x-fidelity-vscode && yarn release",
    "ci": "turbo test:unit && turbo test:integration && yarn workspace x-fidelity global:test:local",
    "ci:unit": "turbo test:unit",
    "ci:integration": "turbo test:integration",
    "ci:lint": "turbo lint",
    "ci:typecheck": "turbo check-types",
    "ci:quality": "yarn ci:lint && yarn ci:typecheck",
    "vscode:dev": "yarn workspace x-fidelity-vscode dev",
    "vscode:dev:fresh": "yarn workspace x-fidelity-vscode dev:fresh",
    "vscode:dev:watch": "yarn workspace x-fidelity-vscode dev:watch",
    "vscode:package": "yarn workspace x-fidelity-vscode package",
    "website:dev": "cd website && yarn start",
    "website:build": "cd website && yarn install --frozen-lockfile && yarn build",
    "docs:validate": "node scripts/validate-docs.js",
    "commit": "yarn test && yarn test:coverage && git-cz",
    "build-run": "yarn build:clean && yarn workspace x-fidelity run build-run",
    "cli:build": "yarn workspace x-fidelity build",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run"
  },
  "dependencies": {
    "@types/node": "^22.10.5",
    "ajv": "^8.17.1",
    "depcheck": "^1.4.7"
  },
  "devDependencies": {
    "@jest/reporters": "^30.0.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "c8": "^10.1.3",
    "codecov": "^3.8.3",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "glob": "^11.0.0",
    "istanbul-merge": "^2.0.0",
    "js-yaml": "^4.1.0",
    "semantic-release": "^24.2.7",
    "turbo": "^2.4.0",
    "typescript": "^5.9.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@1.22.0"
}
