    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@semantic-release/npm": "^12.0.1",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.4",
    "@types/node": "^16.18.97",
    "@types/parse-json": "^4.0.2",
    "@types/semver": "^7.5.8",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-recommended-bump": "^10.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.7",
