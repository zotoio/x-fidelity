    "lodash": "^4.17.21",
    "nodemon": "^3.0.2",
    "semver": "^7.6.2",
    "winston": "^3.13.0",
    "yarn": "^1.22.21"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
