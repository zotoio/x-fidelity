{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out/test",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "vscode", "mocha"]
  },
  "include": [
    "src/**/*.test.ts",
    "src/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "dist",
    "**/*.js",
    "docs-archive/**/*"
  ]
} 