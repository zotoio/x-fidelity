{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "outDir": "out",
    "sourceMap": true,
    "types": ["node", "jest", "vscode"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.test.ts", 
    "src/**/*.spec.ts", 
    "src/jest.setup.ts",
    "src/test/**/*"
  ],
  "exclude": ["node_modules", ".vscode-test", "dist", "out"],
  "references": [
    {
      "path": "../x-fidelity-types"
    },
    {
      "path": "../x-fidelity-core"
    },
    {
      "path": "../x-fidelity-plugins"
    }
  ]
}
