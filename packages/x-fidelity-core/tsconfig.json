{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "dist"
  ],
  "references": [
    {
      "path": "../x-fidelity-types"
    }
  ]
} 