{
  "name": "@x-fidelity/plugins",
  "version": "0.0.0-semantically-released",
  "description": "10 built-in plugins for X-Fidelity: AST analysis, filesystem checks, dependency validation, OpenAI integration, extract-values, and more",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": "./dist/*"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "test": "yarn check-types && yarn lint && jest",
    "test:unit": "yarn check-types && yarn lint && jest",
    "test:integration": "yarn check-types && yarn lint && jest --testMatch='**/*.integration.test.ts'",
    "test:coverage": "yarn check-types && yarn lint && jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit"
  },
  "repository": "git@github.com:zotoio/x-fidelity.git",
  "author": "wyvern8 <io@zoto.io>",
  "license": "MIT",
  "engines": {
    "node": ">=22.16.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@types/esprima": "^4.0.6",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.5",
    "@types/semver": "^7.5.8",
    "@types/yauzl": "^2.10.3",

    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/types": "^7.23.0",
    "@x-fidelity/core": "file:../x-fidelity-core",
    "@x-fidelity/types": "file:../x-fidelity-types",
    "@yarnpkg/lockfile": "^1.1.0",
    "@xmldom/xmldom": "^0.8.11",
    "axios": "^1.11.0",
    "dotenv": "^16.4.7",
    "esprima": "^4.0.1",
    "glob": "11.0.3",
    "jsonpath-plus": "^10.0.0",
    "lodash": "^4.17.21",
    "openai": "^4.86.1",
    "semver": "^7.7.1",
    "tree-sitter": "^0.25.0",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-typescript": "^0.23.2",
    "web-tree-sitter": "^0.25.0",
    "xpath": "^0.0.34",
    "yaml": "^2.8.1"
  }
}
