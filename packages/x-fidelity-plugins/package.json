{
  "name": "@x-fidelity/plugins",
  "version": "0.0.0-semantically-released",
  "description": "9 built-in plugins for X-Fidelity: AST analysis, filesystem checks, dependency validation, OpenAI integration, and more",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": "./dist/*"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "prebuild": "yarn clean && node -e \"require('fs').mkdirSync('dist', {recursive: true})\"",
    "build": "tsc",
    "build:watch": "tsc --watch --sourceMap",
    "test": "cd ../../ && yarn workspace @x-fidelity/types build && yarn workspace @x-fidelity/core build && cd packages/x-fidelity-plugins && yarn lint:fix && NODE_ENV=test jest --config jest.config.js",
    "test:unit": "cd ../../ && yarn workspace @x-fidelity/types build && yarn workspace @x-fidelity/core build && cd packages/x-fidelity-plugins && yarn lint:fix && NODE_ENV=test jest --config jest.config.js",
    "test:coverage": "NODE_ENV=test jest --config jest.config.js --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": "git@github.com:zotoio/x-fidelity.git",
  "author": "wyvern8 <io@zoto.io>",
  "license": "MIT",
  "engines": {
    "node": ">=22.16.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "@types/esprima": "^4.0.6",
    "@types/lodash": "^4.17.13",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "jest": "^30.0.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.7.2",
    "@types/yauzl": "^2.10.3",
    "nodemon": "^3.1.9"
  },
  "dependencies": {
    "@x-fidelity/types": "file:../x-fidelity-types",
    "@x-fidelity/core": "file:../x-fidelity-core",
    "@babel/parser": "^7.23.0",
    "@babel/types": "^7.23.0",
    "@yarnpkg/lockfile": "^1.1.0",
    "axios": "^1.8.1",
    "dotenv": "^16.4.7",
    "esprima": "^4.0.1",
    "glob": "11.0.3",
    "lodash": "^4.17.21",
    "openai": "^4.86.1",
    "semver": "^7.7.1",
    "tree-sitter": "^0.22.4",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-typescript": "^0.23.2"
  }
} 