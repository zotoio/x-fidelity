{
  "name": "@x-fidelity/server",
  "version": "0.0.0-semantically-released",
  "description": "Configuration server for x-fidelity framework adherence checks",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": "./dist/*"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "prebuild": "yarn clean",
    "build": "tsc",
    "build:watch": "tsc --watch --sourceMap",
    "test": "cd ../../ && yarn workspace @x-fidelity/types build && yarn workspace @x-fidelity/core build && yarn workspace @x-fidelity/plugins build && cd packages/x-fidelity-server && yarn lint:fix && NODE_ENV=test jest --config jest.config.js",
    "test:unit": "cd ../../ && yarn workspace @x-fidelity/types build && yarn workspace @x-fidelity/core build && yarn workspace @x-fidelity/plugins build && cd packages/x-fidelity-server && yarn lint:fix && NODE_ENV=test jest --config jest.config.js",
    "test:coverage": "NODE_ENV=test jest --config jest.config.js --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts"
  },
  "repository": "git@github.com:zotoio/x-fidelity.git",
  "author": "wyvern8 <io@zoto.io>",
  "license": "MIT",
  "engines": {
    "node": ">=22.16.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "@types/yauzl": "^2.10.3",
    "@types/body-parser": "^1.19.5",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.21.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@x-fidelity/types": "file:../x-fidelity-types",
    "@x-fidelity/core": "file:../x-fidelity-core",
    "@x-fidelity/plugins": "file:../x-fidelity-plugins",
    "body-parser": "^1.20.3",
    "chokidar": "^3.6.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "kill-port": "^2.0.1",
    "nodemailer": "^6.10.0",
    "pino": "^9.6.0"
  }
} 