{
  "name": "x-fidelity",
  "version": "5.2.5",
  "description": "CLI tool for opinionated framework adherence checks with performance optimizations and caching",
  "private": false,
  "bin": {
    "xfidelity": "./dist/xfidelity"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": "./dist/*"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "build:production": "node esbuild.config.js --production",
    "clean": "rimraf dist",
    "dev": "node esbuild.config.js --watch",
    "test": "yarn check-types && yarn lint && OPENAI_API_KEY= jest --testPathIgnorePatterns=vscode-extension",
    "test:unit": "yarn check-types && yarn lint && OPENAI_API_KEY= jest --testPathIgnorePatterns=vscode-extension",
    "test:integration": "yarn check-types && yarn lint && OPENAI_API_KEY= jest --config jest.integration.config.js",
    "test:coverage": "yarn check-types && yarn lint && OPENAI_API_KEY= jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit --incremental",
    "package": "yarn pack",
    "release": "echo '⚠️  Individual package releases are disabled. Use root-level semantic-release for unified releases.'",
    "start": "OPENAI_API_KEY= jest --watch",
    "build-run": "node . --dir ../x-fidelity-fixtures/node-fullstack",
    "start-server": "ts-node src/index.ts --mode server",
    "validate-demo-config": "yarn build && node . --dir ../x-fidelity-fixtures/node-fullstack -x node-fullstack -o true",
    "global:setup": "cd ../../global-install-testing && ./scripts/setup-test-env.sh",
    "global:test:published": "yarn global:setup && cd ../../global-install-testing && ./scripts/test-published.sh",
    "global:test:local": "yarn global:setup && cd ../../global-install-testing && ./scripts/test-local.sh",
    "global:test": "yarn global:test:local && yarn global:test:published"
  },
  "repository": "git@github.com:zotoio/x-fidelity.git",
  "author": "wyvern8 <io@zoto.io>",
  "license": "MIT",
  "engines": {
    "node": ">=22.16.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.2",
    "@types/cli-progress": "^3.11.6",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/json-to-pretty-yaml": "^1.2.1",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "@types/yauzl": "^2.10.3",
    "@x-fidelity/core": "file:../x-fidelity-core",
    "@x-fidelity/democonfig": "file:../x-fidelity-democonfig",
    "@x-fidelity/plugins": "file:../x-fidelity-plugins",
    "@x-fidelity/server": "file:../x-fidelity-server",
    "@x-fidelity/types": "file:../x-fidelity-types",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.25.5",
    "esbuild-plugin-pino": "^2.2.2",
    "eslint": "^9.29.0",
    "jest": "^30.0.2",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/types": "^7.23.0",
    "@yarnpkg/lockfile": "^1.1.0",
    "axios": "^1.8.1",
    "chalk": "^5.4.1",
    "chokidar": "^3.6.0",
    "commander": "^14.0.0",
    "dotenv": "^16.4.7",
    "esprima": "^4.0.1",
    "fs-extra": "^11.3.0",
    "glob": "11.0.3",
    "json-to-pretty-yaml": "^1.2.2",
    "lodash": "^4.17.21",
    "openai": "^4.86.1",
    "ora": "^8.2.0",
    "pino": "^9.7.0",
    "prettyjson": "^1.2.5",
    "semver": "^7.7.1",
    "tree-sitter": "^0.22.4",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-typescript": "^0.23.2",
    "web-tree-sitter": "^0.25.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
