{
  "name": "@x-fidelity/types",
  "version": "4.0.0",
  "description": "Shared TypeScript type definitions for x-fidelity",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": "./dist/*"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "prebuild": "yarn clean && mkdir -p dist",
    "build": "tsc",
    "build:watch": "tsc --watch --sourceMap",
    "test": "NODE_ENV=test jest --config jest.config.js",
    "test:coverage": "NODE_ENV=test jest --config jest.config.js --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": "git@github.com:zotoio/x-fidelity.git",
  "author": "wyvern8 <io@zoto.io>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.2"
  },
  "dependencies": {}
} 