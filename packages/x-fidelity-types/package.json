{
  "name": "@x-fidelity/types",
  "version": "0.0.0",
  "description": "Shared TypeScript type definitions for x-fidelity",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": "./dist/*"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "prebuild": "yarn clean",
    "build": "tsc",
    "build:watch": "tsc --watch --sourceMap",
    "test": "yarn lint:fix && NODE_ENV=test jest --config jest.config.js",
    "test:coverage": "NODE_ENV=test jest --config jest.config.js --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": "git@github.com:zotoio/x-fidelity.git",
  "author": "wyvern8 <io@zoto.io>",
  "license": "MIT",
  "engines": {
    "node": ">=22.16.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "jest": "^30.0.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {}
}
