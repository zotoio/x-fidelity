{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "noEmitOnError": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "packages", 
    "website", 
    "vscode-extension",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "./packages/x-fidelity-types"
    },
    {
      "path": "./packages/x-fidelity-core"
    },
    {
      "path": "./packages/x-fidelity-plugins"
    },
    {
      "path": "./packages/x-fidelity-server"
    },
    {
      "path": "./packages/x-fidelity-cli"
    },
    {
      "path": "./packages/x-fidelity-vscode"
    }
  ]
}
